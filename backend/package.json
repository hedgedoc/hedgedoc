{
  "name": "@hedgedoc/backend",
  "version": "2.0.0-alpha.3",
  "description": "Realtime collaborative markdown notes on all platforms.",
  "author": "",
  "private": true,
  "license": "AGPL-3.0",
  "scripts": {
    "build": "rimraf dist && nest build",
    "format": "prettier --check \"src/**/*.ts\" \"test/**/*.ts\"",
    "format:fix": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "rimraf dist && nest start",
    "start:dev": "rimraf dist && nest start --watch",
    "start:debug": "rimraf dist && nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint --max-warnings 0 \"{src,apps,libs,test}/**/*.ts\"",
    "lint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:ci": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config jest-e2e.json && rimraf test_uploads*",
    "test:e2e:ci": "jest --config jest-e2e.json --coverage && rimraf test_uploads*",
    "seed": "ts-node src/seed.ts",
    "typeorm": "typeorm-ts-node-commonjs -d src/ormconfig.ts"
  },
  "dependencies": {
    "@azure/storage-blob": "12.28.0",
    "@hedgedoc/commons": "workspace:commons",
    "@mrdrogdrog/optional": "1.2.1",
    "@nestjs/common": "10.4.20",
    "@nestjs/config": "3.3.0",
    "@nestjs/core": "10.4.20",
    "@nestjs/event-emitter": "2.1.1",
    "@nestjs/platform-express": "10.4.20",
    "@nestjs/platform-ws": "10.4.20",
    "@nestjs/schedule": "4.1.2",
    "@nestjs/swagger": "8.1.1",
    "@nestjs/typeorm": "10.0.2",
    "@nestjs/websockets": "10.4.20",
    "@node-rs/argon2": "2.0.2",
    "@zxcvbn-ts/core": "3.0.4",
    "@zxcvbn-ts/language-common": "3.0.4",
    "@zxcvbn-ts/language-en": "3.0.2",
    "base32-encode": "1.2.0",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.2",
    "cli-color": "2.0.4",
    "connect-typeorm": "2.0.0",
    "cookie": "1.0.2",
    "diff": "8.0.2",
    "express-session": "1.18.2",
    "file-type": "16.5.4",
    "htmlparser2": "10.0.0",
    "ldapauth-fork": "6.1.0",
    "markdown-it": "14.1.0",
    "minio": "8.0.6",
    "mysql": "2.18.1",
    "nestjs-zod": "4.3.1",
    "openid-client": "5.7.1",
    "pg": "8.16.3",
    "raw-body": "3.0.1",
    "reflect-metadata": "0.2.2",
    "rimraf": "6.0.1",
    "rxjs": "7.8.2",
    "sqlite3": "5.1.7",
    "typeorm": "0.3.20",
    "uuid": "11.0.5",
    "ws": "8.18.3",
    "yjs": "13.6.27",
    "zod": "3.24.2"
  },
  "devDependencies": {
    "@darraghor/eslint-plugin-nestjs-typed": "5.0.32",
    "@nestjs/cli": "10.4.9",
    "@nestjs/schematics": "10.2.3",
    "@nestjs/testing": "10.4.15",
    "@trivago/prettier-plugin-sort-imports": "4.3.0",
    "@tsconfig/node18": "18.2.4",
    "@types/cli-color": "2.0.6",
    "@types/cookie": "1.0.0",
    "@types/cookie-signature": "1.1.2",
    "@types/express": "5.0.3",
    "@types/express-session": "1.18.2",
    "@types/jest": "30.0.0",
    "@types/markdown-it": "14.1.2",
    "@types/mysql": "2.15.27",
    "@types/node": "*",
    "@types/pg": "8.15.5",
    "@types/source-map-support": "0.5.10",
    "@types/supertest": "6.0.3",
    "@types/ws": "8.18.1",
    "@typescript-eslint/eslint-plugin": "7.18.0",
    "@typescript-eslint/parser": "7.18.0",
    "eslint": "8.57.1",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-jest": "28.9.0",
    "eslint-plugin-local-rules": "3.0.2",
    "eslint-plugin-prettier": "5.2.3",
    "jest": "30.1.3",
    "mocked-env": "1.3.5",
    "prettier": "3.6.2",
    "source-map-support": "0.5.21",
    "supertest": "6.3.4",
    "ts-jest": "29.4.3",
    "ts-mockery": "1.2.0",
    "ts-node": "11.0.0-beta.1",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.9.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": [
        "ts-jest",
        {
          "tsconfig": "test/tsconfig.json",
          "transpilation": true
        }
      ]
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "reporters": [
      "default",
      "github-actions"
    ]
  },
  "packageManager": "yarn@4.9.4"
}
