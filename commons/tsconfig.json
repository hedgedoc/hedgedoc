{
  "compilerOptions": {
    "target": "esnext",
    "removeComments": true,
    "preserveConstEnums": true,
    "lib": [
      "es2020",
      "dom"
    ],
    "declaration": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "outDir": "dist/",
    "rootDir": "./src",
    "allowJs": true,
    "declarationMap":true,
    "sourceMap": true,
    "typeRoots": ["./types"]
  },
  "include": ["./src", "./types"],
  "exclude": ["./dist"]
}
