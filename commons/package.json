{
  "name": "@hedgedoc/commons",
  "private": true,
  "version": "0.3.0",
  "description": "Common code between frontend and backend",
  "author": "The HedgeDoc Authors",
  "license": "AGPL-3.0",
  "scripts": {
    "build": "rm -rf dist && microbundle",
    "build:watch": "rm -rf dist && microbundle -w",
    "test": "jest",
    "test:ci": "jest --ci",
    "prepublish": "rm -rf dist && yarn lint && yarn build && yarn test",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint --fix --ext .ts src"
  },
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "source": "src/index.ts",
  "exports": {
    "types": "./dist/index.d.ts",
    "import": "./dist/index.mjs",
    "require": "./dist/index.cjs"
  },
  "files": [
    "LICENSES/*",
    "package.json",
    "README.md",
    "dist/**"
  ],
  "browserslist": [
    "node> 12"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/hedgedoc/hedgedoc.git"
  },
  "dependencies": {
    "domhandler": "5.0.3",
    "eventemitter2": "6.4.9",
    "joi": "17.9.2",
    "js-yaml": "4.1.0",
    "reveal.js": "4.5.0",
    "ws": "8.13.0",
    "yjs": "13.6.7"
  },
  "devDependencies": {
    "@jest/types": "29.6.1",
    "@mrdrogdrog/optional": "1.1.0",
    "@types/js-yaml": "4.0.5",
    "@types/ws": "8.5.5",
    "@typescript-eslint/eslint-plugin": "6.2.0",
    "@typescript-eslint/parser": "6.2.0",
    "eslint": "8.46.0",
    "eslint-config-prettier": "8.9.0",
    "eslint-plugin-jest": "27.2.3",
    "eslint-plugin-prettier": "5.0.0",
    "jest": "29.6.2",
    "microbundle": "0.15.1",
    "prettier": "3.0.0",
    "ts-jest": "29.1.1",
    "typescript": "5.1.6"
  },
  "packageManager": "yarn@3.6.1"
}
