{
  "name": "@hedgedoc/commons",
  "private": true,
  "version": "0.4.0",
  "description": "Common code between frontend and backend",
  "author": "The HedgeDoc Authors",
  "license": "AGPL-3.0",
  "scripts": {
    "build": "./build.sh",
    "test": "jest",
    "test:ci": "jest --ci",
    "prepublish": "rm -rf dist && yarn lint && yarn build && yarn test",
    "format": "../node_modules/.bin/oxfmt --check src",
    "format:fix": "../node_modules/.bin/oxfmt src",
    "lint": "../node_modules/.bin/oxlint src",
    "lint:fix": "../node_modules/.bin/oxlint --fix src"
  },
  "type": "module",
  "source": "src/index.ts",
  "main": "dist/cjs/index.js",
  "types": "dist/cjs/index.d.ts",
  "module": "./dist/esm/index.js",
  "exports": {
    "import": {
      "types": "./dist/esm/index.d.ts",
      "default": "./dist/esm/index.js"
    },
    "require": {
      "types": "./dist/cjs/index.d.ts",
      "default": "./dist/cjs/index.js"
    }
  },
  "files": [
    "LICENSES/*",
    "package.json",
    "README.md",
    "dist/**"
  ],
  "browserslist": [
    "node> 12"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/hedgedoc/hedgedoc.git"
  },
  "dependencies": {
    "domhandler": "5.0.3",
    "eventemitter2": "6.4.9",
    "joi": "17.13.3",
    "js-yaml": "4.1.1",
    "reveal.js": "5.2.1",
    "ws": "8.18.3",
    "yjs": "13.6.28",
    "zod": "3.25.76"
  },
  "devDependencies": {
    "@jest/types": "29.6.3",
    "@mrdrogdrog/optional": "1.2.1",
    "@types/js-yaml": "4.0.9",
    "@types/ws": "8.18.1",
    "jest": "29.7.0",
    "ts-jest": "29.4.6",
    "typescript": "5.9.3"
  },
  "packageManager": "yarn@4.12.0"
}
