{
  "compilerOptions": {
    "removeComments": true,
    "preserveConstEnums": true,
    "lib": [
      "es2022",
      "dom"
    ],
    "declaration": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "../dist", "**/*.test.ts"]
}
