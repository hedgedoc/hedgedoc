{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": ".",
  "testEnvironment": "node",
  "testMatch": [
    "<rootDir>/test/**/*.e2e-spec.{ts,js}"
  ],
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "coverageDirectory": "./coverage-e2e",
  "testTimeout": 10000,
  "globals": {
    "ts-jest": {
      "tsconfig": "test/tsconfig.json"
    }
  },
  "reporters": ["default", "github-actions"]
}
